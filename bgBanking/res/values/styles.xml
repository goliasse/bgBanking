<resources>

    <style name="AppTheme" parent="android:Theme.Light" />
    
    <style name="LoginActionBarStyle" parent="@android:style/Theme.Holo.NoActionBar">
        <item name="android:background">@null</item>
    </style>

    <style name="CustomTitle" parent="@style/AppTheme" />

    <style name="LoginActivity" parent="@style/CustomTitle">
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:actionBarStyle">@style/LoginActionBarStyle</item>
    </style>

    <style name="setupWizardOuterFrame">
        <item name="android:paddingLeft">@dimen/screen_margin_sides</item>
        <item name="android:paddingTop">@dimen/screen_margin_top</item>
        <item name="android:paddingRight">@dimen/screen_margin_sides</item>
        <item name="android:paddingBottom">@dimen/screen_margin_bottom</item>
    </style>

    <style name="LoginActivityOuterFrame" parent="@style/setupWizardOuterFrame">
        <item name="android:paddingTop">@dimen/login_screen_margin_top</item>
        <item name="android:paddingBottom">@dimen/login_screen_margin_bottom</item>
    </style>

    <style name="Title">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:clickable">false</item>
    </style>
    <style name="NormalText">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textSize">@dimen/description_text_size</item>
        <item name="android:textColorLink">?android:textColorPrimary</item>
        <item name="android:lineSpacingExtra">@dimen/description_line_spacing_extra</item>
    </style>
    <style name="DescriptionText" parent="@style/NormalText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/description_margin_sides</item>
        <item name="android:layout_marginTop">@dimen/description_margin_top</item>
        <item name="android:layout_marginRight">@dimen/description_margin_sides</item>
    </style>
    <style name="Button">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textSize">20.0dip</item>
        <item name="android:paddingLeft">16.0dip</item>
        <item name="android:paddingRight">16.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_min_height</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
    </style>
    <style name="StackedButtons">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>
    <style name="BackButton" parent="@style/Button">
        <item name="android:background">@drawable/btn_dir_prev_holo_light</item>
        <item name="android:paddingLeft">30.0dip</item>
    </style>
    <style name="NextButton" parent="@style/Button">
        <item name="android:background">@drawable/btn_dir_next_holo_light</item>
        <item name="android:paddingRight">35.0dip</item>
    </style>
    <style name="TopDivider">
        <item name="android:background">@color/divider_color</item>
        <item name="android:focusable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">3.0dip</item>
        <item name="android:layout_marginTop">@dimen/top_divider_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/top_divider_margin_bottom</item>
    </style>
    <style name="PreferenceDivider" parent="@style/TopDivider">
        <item name="android:layout_height">1.0dip</item>
        <item name="android:layout_marginTop">0.0dip</item>
        <item name="android:layout_marginBottom">0.0dip</item>
    </style>
    <style name="BottomDivider" parent="@style/TopDivider">
        <item name="android:layout_marginTop">0.0dip</item>
        <item name="android:layout_marginBottom">16.0dip</item>
    </style>
    <style name="InputFieldSideView">
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.0</item>
    </style>
    <style name="InputFieldView">
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    
</resources>
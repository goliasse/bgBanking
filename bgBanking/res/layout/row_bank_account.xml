<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dip"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="123 345.32 BGN"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/sum"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="8dip"
        android:layout_toLeftOf="@id/sum"
        android:ellipsize="middle"
        android:singleLine="true"
        android:text="BG12 PRCB 3456 7890 1234 56"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/name"
        android:ellipsize="middle"
        android:gravity="bottom"
        android:singleLine="true"
        android:text="BG09 PRCB 8765 4321 0987 65"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:visibility="visible"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/last_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/description"
        android:ellipsize="middle"
        android:gravity="bottom"
        android:singleLine="true"
        android:text="19.09.12 16:57"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:visibility="visible"
        tools:ignore="HardcodedText" />

</RelativeLayout>